<html>
  <head>
    <title>Realtime todo app</title>
    <link rel='stylesheet' href='/stylesheets/style.css'></link>
  </head>
  <body>
    <h1>Employee Todo List</h1>
    <form id="newTodoForm" method="POST" action="#">
      <input type="text" placeholder="New Todo" autofocus="autofocus"/>
    </form>
    <ul id="todoList">
      
    </ul>

    <script type="text/html" id="todo_template">
      <span class="{{model.completed? 'completed':''}} ">
        <input type="checkbox" {{ model.completed ? "checked='checked'" : '' }}>
        <label>{{model.title}}</label>
      </span>
    </script>

    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.3.3/underscore-min.js"></script>
    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/backbone.js/0.9.2/backbone-min.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type="text/javascript">
      window.todoData = <%-JSON.stringify(todos)%>
    </script>
    <script type="text/javascript" src="javascripts/TodoApp.js"></script>
    
    
  </body>
</html>